<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="animation" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_animation"
        android:text=""
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#3f00" />

    <TextView
        android:id="@+id/tv_popup"
android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:text="keepoomove"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/tv_animation"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="#300f" />
    
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_alignParentBottom="true"
        android:background="#3000"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </RelativeLayout>


    <TextView
        android:layout_above="@+id/rl_1"
        android:background="#000"
        android:layout_marginBottom="-30dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />


</RelativeLayout>