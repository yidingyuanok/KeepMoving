<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            style="@style/text_style"
            android:text="Viewpager+RecyclerView+fragment" />

        <TextView
            android:id="@+id/tv2"
            style="@style/text_style"
            android:text="Viewpager+ListView+fragment" />

        <TextView
            android:id="@+id/tv3"
            style="@style/text_style"
            android:text="RecyclerView头部显示或隐藏" />

        <TextView
            android:id="@+id/tv4"
            style="@style/text_style"
            android:text="服务的生命周期" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv5"
                style="@style/text_inner_style"
                android:text="DragView" />

            <TextView
                android:id="@+id/tv23"
                style="@style/text_inner_style"
                android:text="Animation" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv6"
                style="@style/text_inner_style"
                android:text="我是学霸" />

            <TextView
                android:id="@+id/tv7"
                style="@style/text_inner_style"
                android:text="有权查看使用情况的应用" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv8"
                style="@style/text_inner_style"
                android:text="打开网络" />

            <TextView
                android:id="@+id/tv9"
                style="@style/text_inner_style"
                android:text="关闭网络" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv10"
            style="@style/text_style"
            android:text="动态代理" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv11"
                style="@style/text_inner_style"
                android:text="APK" />

            <TextView
                android:id="@+id/tv12"
                style="@style/text_inner_style"
                android:text="静默" />

            <TextView
                android:id="@+id/tv13"
                style="@style/text_inner_style"
                android:text="大师" />

            <TextView
                android:id="@+id/tv14"
                style="@style/text_inner_style"
                android:text="系统" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv15"
                style="@style/text_inner_style"
                android:text="browser" />

            <TextView
                android:id="@+id/tv16"
                style="@style/text_inner_style"
                android:text="testDefaultBrewser" />

            <TextView
                android:id="@+id/tv22"
                style="@style/text_inner_style"
                android:text="播放器" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv17"
                style="@style/text_inner_style"
                android:text="launcher" />

            <TextView
                android:id="@+id/tv20"
                style="@style/text_inner_style"
                android:text="默认phone" />

            <TextView
                android:id="@+id/tv21"
                style="@style/text_inner_style"
                android:text="默认sms" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv24"
                style="@style/text_inner_style"
                android:text="动态加载" />

            <TextView
                android:id="@+id/tv25"
                style="@style/text_inner_style"
