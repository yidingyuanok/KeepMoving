            <TextView
                android:id="@+id/tv26"
                style="@style/text_inner_style"
                android:text="卸载" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv27"
                style="@style/text_inner_style"
                android:text="WMS.addWindow" />

            <TextView
                android:id="@+id/tv28"
                style="@style/text_inner_style"
                android:text="start_Activity" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_margin_bottmo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv29"
                style="@style/text_inner_style"
                android:text="嵌套滑动" />

            <TextView
                android:id="@+id/tv30"
                style="@style/text_inner_style"
                android:text="多指滑动" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>

